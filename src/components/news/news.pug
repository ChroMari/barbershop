include ../section-title/section-title.pug
include ../button/button.pug

- const datasNews = [ { text: 'Нам наконец завезли ягермайстер! Теперь вы можете пропустить стаканчик во время стрижки!', time: '18 января', }, { text: 'В нашей команде пополнение, Борис «БРИТВА» Стригунец, обладатель множества титулов и наград поплнил наши стройные ряды', time: '10 января', }, ];

mixin news()
  section.news
    +section-title('Новости', 'h2')
    ul.news__list
      each data in datasNews
        li.news__item
          p.news__text #{data.text}
          time.news__time #{data.time}
    +button('Все новости')
